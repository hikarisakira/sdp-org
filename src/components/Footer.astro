import LineIcon from './footer/icons/line';

---
<link rel="stylesheet" href="./node_modules/lineicons/dist/lineicons.css" />


<footer class="footer sm:footer-horizontal text-white p-10" style="background-color: #eb5078;">
    <aside>
      <div class="flex items-center mb-4">
        <img loading="lazy" src="/footer-logo.min.svg" alt="社會民主黨" class="h-32" />
      </div>
    </aside>
    
    <nav>
      <div>
        <h6 class="footer-title">最新消息</span>
      </div>
      <div class="flex flex-col gap-2 text-white">
          <a href="/news/press" class="link link-hover">新聞稿</a>
          <a href="/news/events" class="link link-hover">活動資訊</a>
          <a href="/news/issues" class="link link-hover">議題發言</a>
          <a href="/news/clarification" class="link link-hover">闢謠專區</a>
      </div>
    </nav>  
    
    <nav>
      <div>
        <h6 class="footer-title">關於社民黨</span>
      </div>
      <div class="flex flex-col gap-2 text-white">
        <a href="/about" class="link link-hover">簡介</a>
        <a href="/about/team" class="link link-hover">組織團隊</a>
        <a href="/about/officials" class="link link-hover">黨公職</a>
        <a href="/about/documents" class="link link-hover">黨務文件</a>
        <a href="/about/finance" class="link link-hover">財報公開專區</a>
      </div>
    </nav>
    
    <div class="footer-end"> 
      <div>
        <span class="footer-title">支持社民</span>
