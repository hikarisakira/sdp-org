---
import config from "../content/config/config.json";

import LogoZone from "./footer/logo.svelte";
import FooterNavigation from "./footer/navi.svelte";
import ContactButton from "./footer/contact.svelte";
const today = new Date();
---

<footer
  class="copyright-footer"
  style="background-color: #EB5078; padding: 2rem 1rem;"
>
  <div
    style="max-width: 1280px; margin: 0 auto; display: flex; flex-direction: row; justify-content: space-between; gap: 2rem; flex-wrap: wrap; color: white;"
  >
    <LogoZone client:load />
    <FooterNavigation client:load />
    <ContactButton client:load />
  </div>
  <div
    style="max-width: 1280px; margin: 1rem auto 0; text-align: center; color: white; padding-top: 1rem; border-top: 1px solid rgba(255, 255, 255, 0.2);"
  >
    <div>{today.getFullYear()},&nbsp;{config.seo.siteOwner}.</div>
    <p style="margin: 0.5rem 0;">
      本站內容採用
      <a
        rel="license"
        href="https://creativecommons.org/licenses/by-sa/4.0/deed.zh-hant"
        target="_blank"
        style="display:inline-block;"
      >
        創用 CC 姓名標示-相同方式分享 4.0 國際 授權條款
      </a> 釋出。
    </p>

    <!-- 選項：加入 CC 圖示提升辨識度 -->
    <a
      rel="license"
      href="https://creativecommons.org/licenses/by-sa/4.0/deed.zh-hant"
      target="_blank"
      style="display:inline-block; margin-top: 0.5rem;"
    >
      <img
        loading="lazy"
        alt="創用 CC 授權條款"
        style="border-width:0"
        src="/cc-by-sa.svg"
      />
    </a>
  </div>
</footer>
