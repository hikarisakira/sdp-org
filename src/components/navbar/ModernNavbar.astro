---
// ModernNavbar.astro - 整合四種設計風格的現代導航欄
import ModernNavbarClient from './ModernNavbarClient.svelte';
---

<!-- 透明固定導航欄容器 -->
<nav 
  class="modern-navbar fixed top-0 left-0 right-0 z-50 transition-all duration-300"
  data-navbar="transparent"
>
  <!-- 導航欄內容 -->
  <div class="navbar-content flex items-center justify-between px-4 md:px-6 lg:px-8 h-16 md:h-20">
    
    <!-- Logo 居中區域 -->
    <div class="logo-container flex-1 flex justify-center">
      <a href="/" class="logo-link flex items-center space-x-2">
        <img src="/logo.svg" alt="社會民主黨" class="logo-image h-8 md:h-10 lg:h-12" />
        <img src="/logo-font.svg" alt="社會民主黨" class="logo-text h-8 md:h-10 lg:h-12" />
      </a>
    </div>
    
    <!-- Menu 按鍵 (右側) -->
    <div class="menu-toggle-container">
      <ModernNavbarClient client:load />
    </div>
    
  </div>
</nav>

<style>
  .modern-navbar {
    background: transparent;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }
  
  /* 當滾動時的背景變化 */
  .modern-navbar[data-scrolled="true"] {
    background: rgba(255, 255, 255, 0.95);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  }
  
  /* 深色模式支持 */
  @media (prefers-color-scheme: dark) {
    .modern-navbar {
      background: transparent;
    }
    
    .modern-navbar[data-scrolled="true"] {
      background: rgba(28, 28, 25, 0.95);
    }
  }
  
  /* Logo 樣式 */
  .logo-link {
    transition: transform 0.2s ease;
  }
  
  .logo-link:hover {
    transform: scale(1.05);
  }
  
  .logo-image, .logo-text {
    transition: opacity 0.2s ease;
  }
  
  /* 響應式調整 */
  @media (max-width: 768px) {
    .navbar-content {
      padding-left: 1rem;
      padding-right: 1rem;
    }
  }
</style>